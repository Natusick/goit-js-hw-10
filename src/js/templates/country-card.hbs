{{#each this}}
    <div class="card">
       
            <div class="country-name">
                <img 
                src="{{flags.png}}" 
                alt="{{name}}"
                width="40"
                height="30">
                <h2 class="card-title">{{name.official}}</h2>
            </div>
                
            <div class="list"></ul>
                <p><b> Capital:</b> {{capital}}</p>
                <p><b> Population:</b> {{population}}</p>
                <p><b> Languages: </b>
                 {{#each languages}}{{#if @index}},{{/if}} {{this}}{{/each}}
                </p>
            </div>
    </div>
{{/each}}

